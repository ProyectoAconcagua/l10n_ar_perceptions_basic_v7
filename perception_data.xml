<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

  <!-- TODO: Hacer esto como templates para luego ser instalado, deberia estar en el modulo de localizacion -->
  <!-- Percepciones Tax Code -->
  <record id="percepcion_iva" model="account.tax.code">
    <field name="name">Percepcion IVA</field>
    <field name="code">70</field>
    <field name="parent_id" ref="l10n_ar_chart_of_account.vat_code_chart_root"/>
    <field name="sign">1.0</field>
  </record>

  <record id="percepcion_iva_ventas" model="account.tax.code">
    <field name="name">Percepcion IVA Ventas</field>
    <field name="code">701</field>
    <field name="parent_id" ref="percepcion_iva"/>
    <field name="sign">1.0</field>
  </record>

  <record id="percepcion_iva_compras" model="account.tax.code">
    <field name="name">Percepcion IVA Compras</field>
    <field name="code">702</field>
    <field name="parent_id" ref="percepcion_iva"/>
    <field name="sign">-1.0</field>
  </record>

  <record id="percepcion_iva_saldo_favor" model="account.tax.code">
    <field name="name">Percepcion IVA Saldo a Favor</field>
    <field name="code">703</field>
    <field name="parent_id" ref="percepcion_iva"/>
    <field name="sign">-1.0</field>
  </record>

  <record id="operaciones_con_percepcion" model="account.tax.code">
    <field name="name">Operaciones con Percepcion</field>
    <field name="parent_id" ref="l10n_ar_chart_of_account.vat_code_chart_root"/>
    <field name="sign">1.0</field>
  </record>

  <record id="operaciones_con_percepcion_iva" model="account.tax.code">
    <field name="name">Operaciones con Percepcion IVA</field>
    <field name="code">80</field>
    <field name="parent_id" ref="operaciones_con_percepcion"/>
    <field name="sign">1.0</field>
  </record>

  <record id="venta_con_percepcion_iva" model="account.tax.code">
    <field name="name">Venta con Percepcion IVA</field>
    <field name="code">801</field>
    <field name="parent_id" ref="operaciones_con_percepcion_iva"/>
    <field name="sign">1.0</field>
  </record>

  <record id="compra_con_percepcion_iva" model="account.tax.code">
    <field name="name">Compra con Percepcion IVA</field>
    <field name="code">802</field>
    <field name="parent_id" ref="operaciones_con_percepcion_iva"/>
    <field name="sign">1.0</field>
  </record>

  <!-- Percepciones Accounts -->
  <record id="percepcion_iva_credito_fiscal" model="account.account">
    <field name="code">212151</field>
    <field name="reconcile" eval="False"/>
    <field name="parent_id" ref="l10n_ar_chart_of_account.deudas_fiscales"/>
    <field name="type">other</field>
    <field name="name">Percepcion IVA DF</field>
    <field name="user_type" ref="l10n_ar_chart_of_account.account_type_tax"/>
  </record>

  <record id="percepcion_iva_debito_fiscal" model="account.account">
    <field name="code">114151</field>
    <field name="reconcile" eval="False"/>
    <field name="parent_id" ref="l10n_ar_chart_of_account.otros_creditos"/>
    <field name="type">other</field>
    <field name="name">Percepcion IVA CF</field>
    <field name="user_type" ref="l10n_ar_chart_of_account.account_type_tax"/>
  </record>

  <record id="percepcion_iva_saldo_a_pagar" model="account.account">
    <field name="code">212153</field>
    <field name="reconcile" eval="False"/>
    <field name="parent_id" ref="l10n_ar_chart_of_account.deudas_fiscales"/>
    <field name="type">other</field>
    <field name="name">Percepcion IVA SAP</field>
    <field name="user_type" ref="l10n_ar_chart_of_account.account_type_tax"/>
  </record>

  <record id="percepcion_iva_saldo_a_favor" model="account.account">
    <field name="code">114152</field>
    <field name="reconcile" eval="False"/>
    <field name="parent_id" ref="l10n_ar_chart_of_account.otros_creditos"/>
    <field name="type">other</field>
    <field name="name">Percepcion IVA SAF</field>
    <field name="user_type" ref="l10n_ar_chart_of_account.account_type_tax"/>
  </record>

  <!-- Percepciones Taxes -->
  <record id="tax_percepcion_iva_cf" model="account.tax">
    <field name="name">Percepciones IVA Credito Fiscal (Compras)</field>
    <field name="description">Percepciones IVA CF</field>
    <field name="sequence">30</field>
    <field name="type">none</field>
    <field name="account_collected_id" ref="percepcion_iva_credito_fiscal"/>
    <field name="account_paid_id" ref="percepcion_iva_credito_fiscal"/>
    <field name="base_code_id" ref="compra_con_percepcion_iva"/>
    <field name="tax_code_id" ref="percepcion_iva_compras"/>
    <field eval="1.0" name="tax_sign"/>
    <field eval="1.0" name="base_sign"/>
    <!--
    <field name="ref_base_code_id" ref="operaciones_con_percepcion_iva"/>
    <field name="ref_tax_code_id" ref="percepcion_iva_compras"/>
    <field eval="-1.0" name="ref_tax_sign"/>
    <field eval="-1.0" name="ref_base_sign"/>
    -->
    <field name="type_tax_use">purchase</field>
  </record>

  <record id="tax_percepcion_iva_df" model="account.tax">
    <field name="name">Percepciones IVA Debito Fiscal (Ventas)</field>
    <field name="description">Percepciones IVA DF</field>
    <field name="sequence">31</field>
    <field name="type">none</field>
    <field name="account_collected_id" ref="percepcion_iva_debito_fiscal"/>
    <field name="account_paid_id" ref="percepcion_iva_debito_fiscal"/>
    <field name="base_code_id" ref="venta_con_percepcion_iva"/>
    <field name="tax_code_id" ref="percepcion_iva_ventas"/>
    <field eval="1.0" name="tax_sign"/>
    <field eval="1.0" name="base_sign"/>
    <!--
    <field name="ref_base_code_id" ref="venta_con_percepcion_iva"/>
    <field name="ref_tax_code_id" ref="percepcion_iva_ventas"/>
    <field eval="-1.0" name="ref_tax_sign"/>
    <field eval="-1.0" name="ref_base_sign"/>
    -->
    <field name="type_tax_use">sale</field>
  </record>

  <record id="perception_perception_iva_ventas" model="perception.perception">
    <field name="name">Percepcion IVA Ventas</field>
    <field name="tax_id" ref="tax_percepcion_iva_df" />
  </record>

  <record id="perception_perception_iva_compras" model="perception.perception">
    <field name="name">Percepcion IVA Compras</field>
    <field name="tax_id" ref="tax_percepcion_iva_cf" />
  </record>

  </data>
</openerp>
