<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id="view_invoice_perception_form" model="ir.ui.view">
      <field name="name">account.invoice.perception.form.inherit</field>
      <field name="model">account.invoice</field>
      <field name="type">form</field>
      <field name="inherit_id" ref="account.invoice_form"/>
      <field name="arch" type="xml">
        <page string="Invoice Lines" position="after">
          <page string="Perceptions">
            <separator string="Applied Perceptions"/>
            <field name="perception_ids" nolabel="1" colspan="4">
              <tree string="Perception Lines">
                <field name="date" />
                <field name="perception_id" string="Perception Type"/>
                <field name="base" />
                <field name="amount" />
                <field name="state_id" />
              </tree>
              <form string="Perception Lines" version="7.0">
                <sheet>
                    <h1>
                        <label string="Perception Lines"/>
                    </h1>
                    <group>
                      <group>
                        <field name="perception_id" domain="[('type_tax_use', '=', 'sale')]" on_change="onchange_perception(perception_id, context)" colspan="4" />
                          <field name="name"/>
                      </group>
                      <group>
                          <field name="state_id" />
                          <field name="date" />
                          <label string="Keep it empty if the date is the same as the voucher." />
                      </group>
                      <group>
                        <separator string="Amount" colspan="4"/>
                        <field name="base" colspan="4" />
                        <field name="amount" colspan="4" />
                      </group>
                    </group>
                    <field name="account_id" invisible="1" />
                    <field name="base_code_id" invisible="1" />
                    <field name="tax_code_id" invisible="1" />
                </sheet>
              </form>
            </field>
          </page>
        </page>
      </field>
    </record>

    <record id="view_invoice_supplier_perception_form" model="ir.ui.view">
      <field name="name">account.invoice.perception.form.inherit</field>
      <field name="model">account.invoice</field>
      <field name="type">form</field>
      <field name="inherit_id" ref="account.invoice_supplier_form"/>
      <field name="arch" type="xml">
        <page string="Invoice" position="after">
          <page string="Perceptions">
            <separator string="Supported Perceptions"/>
            <field name="perception_ids" nolabel="1" colspan="4">
              <tree string="Perception Lines">
                <field name="perception_id" string="Perception Type" />
                <field name="base" />
                <field name="amount" />
              </tree>
              <form string="Perception Lines" version="7.0">
                  <sheet>
                      <h1>
                          <label string="Perception Lines"/>
                      </h1>
                      <group>
                        <group>
                          <field name="perception_id" domain="[('type_tax_use', '=', 'purchase')]" on_change="onchange_perception(perception_id, context)"/>
                          <field name="name"/>
                        </group>
                      </group>
                      <group>
                        <separator string="Amount" colspan="4"/>
                        <field name="base"/>
                        <field name="amount"/>
                      </group>
                      <field name="account_id" invisible="1" />
                      <field name="base_code_id" invisible="1" />
                      <field name="tax_code_id" invisible="1" />
                  </sheet>
              </form>
            </field>
          </page>
        </page>
      </field>
    </record>
  </data>
</openerp>
